<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Top Menu Text Style -->
    <Style x:Key="MenuTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="5,5"/>
    </Style>

    <!-- Section Header -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

    <!-- Movie Card Container -->
    <Style x:Key="MovieCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#666666"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <!-- Movie Info TextBlock -->
    <Style x:Key="MovieTextStyle" TargetType="TextBlock">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Cast Box -->
    <Style x:Key="CastTextStyle" TargetType="TextBlock">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
